@using Vidly.Models
@model IEnumerable<Vidly.Models.Rental>
@{
    ViewBag.Title = "ListOfRentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListOfRentals</h2>

<table id="rentals" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Movie</th>
            <th>Date Rented</th>
            <th>Date Returned</th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function () {
            $("#rentals").DataTable({
                ajax: {
                    url: "/api/rentals",
                    dataSrc: ''
                },
                columns: [
                    {
                        data: "customer.name"
                    },
                    {
                        data: "movie.name"
                    },
                    {
                        data: "dateRented"
                    },
                    {
                        data: "dateReturned"
                    },
                    {
                        data: "id",
                        render: function(data, type, rental) {
                            if (rental.dateReturned === null) {
                                return "<button class='btn-link js-delete' data-rental-id=" + data + ">Return</button>";
                            }
                            else {
                                return "<p class='text-success'>Returned</p>";
                            }
                        }
                    }
                ]
            });

            $("#rentals").on("click",
                ".js-delete",
                function() {
                    var button = $(this);
                    bootbox.confirm("Do you want to return this movie?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/rentals/return/" + button.attr("data-rental-id"),
                                    success: function() {
                                        table.row(button.parents("tr")).update().draw(); //datatables.net
                                    }
                                });
                            }
                        });
                });
        });
    </script>
}